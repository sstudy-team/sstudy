@model List<MvcInternetApplication.Models.Subsection>

@{
	Layout = null;
}

<p>
	@Html.ActionLink("Назад", "ShowHier", new { goal = "sections", subject = ViewBag.subject, step = ViewBag.Id })
</p>
<table>
	<tr>
		<th>
			Подраздел
		</th>
		<th></th>
	</tr>

	@using (Html.BeginForm("EditSubsections", "Cards", new { secId = ViewBag.Id }))
	{
		<input type="submit" value="Сохранить" />

		for (int i = 0; i < Model.Count; i++)
		{
			<tr>
				<td>
					@Html.TextBoxFor(m => m[i].Name)
				</td>
				<td>
					@Html.ActionLink("Показать темы", "ShowHier", new { goal = "topics", subject = ViewBag.subject, step = Model[i].SubsectionId })
				</td>
			</tr>
		}
	}

</table>