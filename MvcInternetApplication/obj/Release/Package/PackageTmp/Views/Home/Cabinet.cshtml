@{
    ViewBag.Title = "Личная страница";
}

<div id="profile">
	<div id="pr_header">
		<header>Профиль</header>
		<div id="username">
			<article>@ViewBag.Msg</article>
		</div>
	</div>

	<div id="pr_nav">
		<div class="profile_point" id="nav1">
			@Ajax.ActionLink("Профиль", "Prof",
			new AjaxOptions
			{
				UpdateTargetId = "pr_main"
			})
		</div>
		<div class="profile_point" id="nav2">
			@Ajax.ActionLink("Карточки", "ProfCard",
			new AjaxOptions
			{
				UpdateTargetId = "pr_main"
			})
		</div>
	</div>

	<div id="pr_main">
		@Html.Action("Prof")
	</div>

	<div id="frame_left"></div>
	<div id="frame_right"></div>
</div>

<script>
