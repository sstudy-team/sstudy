@model MvcInternetApplication.Models.RegisterModel

@{
	Layout = null;
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)
<div id="red">
	<article class="purr">Регистрация</article>
	<div class="kittie_grid">

		<div>
			<p class="kittie1">Логин</p>
			@Html.TextBoxFor(m => m.UserName, new { data_role = "none" })
		</div>

		<div>
			<p class="kittie2">Пароль</p>
			@Html.PasswordFor(m => m.Password, new { id = "catnip3", data_role = "none" })
		</div>

		<div id="meowmeow">
			<p id="kittie4">Подтверждение пароля</p>
			@Html.PasswordFor(m => m.ConfirmPassword, new { data_role = "none" })
		</div>

	</div>

	<!--
	<span class="kittie_span">
		Forgot something?
	</span>
	-->

	<div class="button3" onclick="$( '.exp_cat' ).fadeOut( 4000, function() {});">
		<input type="submit" value="Зарегистрироваться" />
	</div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
