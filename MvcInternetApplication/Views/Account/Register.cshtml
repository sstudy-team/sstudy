@model MvcInternetApplication.Models.RegisterModel

@{
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary(true)

	<div class="regForm">
		<article>Войти в аккаунт</article>

		<section>
			<span>Почта</span>
			@Html.TextBoxFor(m => m.UserName, new { data_role = "none" })
		</section>

		<section>
			<span>Пароль</span>
			@Html.PasswordFor(m => m.Password, new { id = "catnip3", data_role = "none" })
		</section>

		<section>
			<span>Потвердить пароль</span>
			@Html.PasswordFor(m => m.ConfirmPassword, new { data_role = "none" })
		</section>

		<div class="confirmLog">Ok</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
