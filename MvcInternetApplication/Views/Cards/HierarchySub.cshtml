@model List<MvcInternetApplication.Models.Subject>

@{
	Layout = null;
}

<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table>
	<tr>
		<th>
			Предмет
		</th>
		<th></th>
	</tr>

	@using (Html.BeginForm("EditSubjects", "Cards"))
	{
		<input type="submit" value="Сохранить" />

		for (int i = 0; i < Model.Count; i++)
		{
			<tr>
				<td>
					@Html.TextBoxFor(m => m[i].Name)
				</td>
				<td>
					@Html.ActionLink("Показать разделы", "ShowHier", new { goal = "sections", subject = Model[i].SubjectId, step = 0 })
				</td>
			</tr>
		}
	}

</table>