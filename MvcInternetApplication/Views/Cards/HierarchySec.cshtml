@model List<MvcInternetApplication.Models.Section>

@{
	Layout = null;
}

<p>
	@Html.ActionLink("Назад", "ShowHier", new { goal = "subjects", subject = 0, step = 0 })
</p>
<table>
	<tr>
		<th>
			Раздел
		</th>
		<th></th>
	</tr>

	@using (Html.BeginForm("EditSections", "Cards"))
	{
		<input type="submit" value="Сохранить" />

		for (int i = 0; i < Model.Count; i++)
		{
			<tr>
				<td>
					@Html.TextBoxFor(m => m[i].Name)
				</td>
				<td>
					@Html.ActionLink("Показать подразделы", "ShowHier", new { goal = "subsections", subject = ViewBag.subject, step = Model[i].SectionId })
				</td>
			</tr>
		}
	}

</table>